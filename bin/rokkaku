#!/usr/bin/env perl
use strict;
use warnings;
use opts;
use FindBin;
use lib qq($FindBin::Bin/../lib);
require Roccaku;

opts my $config    => { isa => 'Str', default => qq{config.yaml}, },
     my $test_only => { isa => 'Bool' };

my $r6 = Roccaku->new( $config );

$r6->set_test_only( $test_only );
$r6->run;

